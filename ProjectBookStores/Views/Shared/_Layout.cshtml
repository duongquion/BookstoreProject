<style>
    
    .dialog {
        position: fixed;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        visibility: hidden;
        opacity: 0;
        transition: opacity linear 0.2s;
    }

        .dialog:target {
            visibility: visible;
            opacity: 1;
        }

    .dialog-body {
        width: 600px;
        position: relative;
        padding: 16px;
        background-color: #F5F5F5;
        color: #333;
    }

    .dashed-line {
        border-top: 2px dashed #000;
        width: 100%;
        padding-bottom: 8px;
    }

    .dialog-body h3 {
        text-align: center;
        padding-bottom: 6px;
    }

    .dialog-body p {
        font-size: 13px;
        color: #555;
        padding-bottom: 16px;
    }

    .dialog-close {
        position: absolute;
        top: 6px;
        right: 6px;
        text-decoration: none;
        font-size: 24px;
    }

    .overlay {
        background-color: rgba(0,0,0,0.2);
    }

    .dialog-item input {
        width: 450px;
        background-color: #fff;
        padding: 10px;
        border: none;
    }

        .dialog-item input::placeholder {
            font-size: 13px;
        }

    .dialog-item button {
        background-color: #36344D;
        color: #fff;
        padding: 10px;
        cursor:pointer;
    }

    .product-list-item .item-image img {
        width: 100%;
        height: 40vh;
        display: block;
    }

    .product .container .product-list {
        display: flex;
        flex-wrap: wrap; /* Allows items to wrap to the next line */
        gap: 20px;
        margin-top: 20px;
        background-color: #fff;
        padding: 40px;
        box-sizing: border-box;
        justify-content: flex-start;
        min-width: 1000px; /* Ensures the product list doesn't shrink */
    }

        .product .container .product-list .product-list-item {
            flex: 1 1 calc(20% - 20px); /* Responsive items, 5 items per row */
            max-width: calc(20% - 20px);
            box-sizing: border-box;
            margin-bottom: 20px; /* Ensure spacing at the bottom */
            text-decoration: none;
            color: #36344D;
        }

            .product .container .product-list .product-list-item img {
                width: 100%;
                object-fit: cover;
            }

            .product .container .product-list .product-list-item .product-box {
                width: 100%;
                height: 560px;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
</style>
