@{
    ViewData["Title"] = "AllProductTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    main {
        width: 100%;
        height: auto;
    }

        main .pagination {
            width: 100%;
            display: flex;
            justify-content: center;
            padding-top: 15px;
        }

    .pagination .container {
        width: 1200px;
        display: flex;
        gap: 25px;
    }

    .pagination .content {
        display: flex;
        gap: 7px;
    }

        .pagination .content span {
            background-color: #36344D;
            color: #f1f1f1;
            padding: 5px;
            border-radius: 50%;
            font-size: 13px;
        }

    .content .name {
        padding-top: 6px;
        font-weight: 300;
        font-size: 13px;
    }
    /* Filter */
    .filter {
        width: 100%;
        display: flex;
        justify-content: center;
        padding-top: 15px;
    }

        .filter .container {
            width: 1200px;
            height: 70px;
            display: flex;
            gap: 10px;
            background-color: #ffff;
            justify-content: space-between;
            padding: 0px 15px 0px 15px;
        }

            .filter .container .box {
                display: flex;
                gap: 8px;
            }

            .filter .container .content-name {
                font-size: 18px;
                font-weight: 500;
                padding-top: 23px;
            }

        /* Dropdown */
        .filter .dropdown-content {
            position: relative;
            display: inline-block;
            width: 150px;
            height: 50px;
            border: 2px solid #36344D;
            margin-top: 10px;
            border-radius: 10px;
            cursor: pointer;
        }

            .filter .dropdown-content .dropdown-name {
                text-decoration: none;
                color: #36344D;
                padding: 13px 0 0 10px;
                font-size: 15px;
                display: flex;
                justify-content: space-between;
            }

                .filter .dropdown-content .dropdown-name span {
                    font-size: 20px;
                    padding-right: 10px;
                }

            .filter .dropdown-content .dropdown-list {
                display: none;
                position: absolute;
                top: 105%;
                left: 0;
                background-color: #f9f9f9;
                min-width: 175px;
                box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                z-index: 1;
            }

        .filter .dropdown-list .dropdown-list-item span {
            color: #36344D;
            font-size: 20px;
            padding-top: 5px;
        }

        .filter .dropdown-list-item .content {
            font-size: 18px;
            color: #36344D;
            padding-top: 5px;
            font-weight: 300;
        }

            .filter .dropdown-list-item .content:nth-child(1) {
                font-size: 15px;
                color: #9E9E9E;
                padding-top: 3px;
                font-weight: 500;
                font-size: 15px;
            }

        .filter .dropdown-content .dropdown-list .dropdown-list-item {
            display: flex;
            gap: 10px;
            padding: 15px;
            text-decoration: none;
            border-bottom: 1px solid #eee;
        }

            .filter .dropdown-content .dropdown-list .dropdown-list-item:hover {
                background-color: #f1f1f1;
            }

        .filter .dropdown-content:hover .dropdown-list {
            display: block;
        }

    .product {
        margin-top: 15px;
        margin-bottom: 0;
        display: flex;
        justify-content: center;
        width: 100%;
    }

        .product .container {
            width: 1200px;
        }

            .product .container .product-list {
                display: flex;
                flex-wrap: wrap; /* Allows items to wrap to the next line */
                gap: 20px;
                margin-top: 20px;
                background-color: #fff;
                padding: 40px;
                box-sizing: border-box;
                justify-content: flex-start;
                min-width: 1000px; /* Ensures the product list doesn't shrink */
            }

                .product .container .product-list .product-list-item {
                    flex: 1 1 calc(20% - 20px); /* Responsive items, 5 items per row */
                    max-width: calc(20% - 20px);
                    box-sizing: border-box;
                    margin-bottom: 20px; /* Ensure spacing at the bottom */
                    text-decoration: none;
                    color: #36344D;
                }

                    .product .container .product-list .product-list-item img {
                        width: 100%;
                    }

                    .product .container .product-list .product-list-item .product-box {
                        width: 100%;
                        min-height: 400px; /* Set a minimum height to prevent collapsing */
                        display: flex;
                        flex-direction: column;
                        justify-content: space-between; /* Ensures elements are spaced properly */
                    }

    .product-list-item .item-image {
        position: relative;
        width: 100%;
        overflow: hidden;
    }

        .product-list-item .item-image img {
            width: 100%;
            height: auto;
            display: block;
        }

    .product-list-item .item-name {
        font-size: 18px;
        font-weight: 300;
        margin-top: 20px;
        height: 50px;
    }

    .product-list-item .item-author {
        font-size: 15px;
        font-weight: 300;
        margin-top: 15px;
    }

    .product-list-item .discount {
        position: absolute;
        top: 10px;
        left: 10px;
        font-size: 16px;
        background-color: #F44336;
        padding: 5px 10px;
        border-radius: 10px;
        color: #fff;
        font-weight: bold;
        width: 60px;
        height: 30px;
        margin-top: 4px;
    }

    .product-list-item .item-total-price {
        font-size: 22px;
        font-weight: 500;
        margin-top: 15px;
        width: 100%;
        display: flex;
        justify-content: space-between;
        font-weight: bold;
        color: #36344D;
    }

    .product-list-item .item-unit-price {
        text-decoration: line-through;
        color: #a9a9a9;
        font-size: 16px;
        font-weight: 300;
        margin-top: 10px;
    }

    .product-list-item .button {
        width: 100%;
        margin-top: 15px;
    }

        .product-list-item .button button {
            width: 100%;
            border: none;
            padding: 13px;
            background-color: #f1f1f1;
            letter-spacing: 1.5px;
            font-size: 18px;
            font-weight: 400;
            background-color: #36344D;
            color: #fff;
            font-family: "Inter", sans-serif;
        }
</style>
<main>
    @RenderSection("pagination", required: false)
    @RenderBody()
</main>

