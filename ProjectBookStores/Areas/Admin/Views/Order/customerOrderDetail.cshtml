@model ProjectBookStores.ViewModels.detailOrderViewModel

@{
    ViewData["Title"] = "customerOrderDetail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Customer Order Detail</h1>
@if (Model != null)
{
    <p>Khách hàng: @Model.customerName</p>
    <p>Email: @Model.customerEmail</p>
    <p>Trạng thái: @(Model.Status ? "Đã xác nhận" : "Chưa xác nhận")</p>
    <p>Trạng thái hiện tại: @Model.orderStatus</p>

    <form asp-action="UpdateOrderStatus" method="post">
        <input type="hidden" name="orderId" value="@Model.orderId" />
        <select name="statusId">
            <option value="1">Chờ giao hàng</option>
            <option value="2">Đang giao hàng</option>
            <option value="3">Đã giao hàng</option>
        </select>
        <button type="submit">Cập nhật trạng thái</button>
    </form>
}
else
{
    <p>Không tìm thấy đơn hàng.</p>
}